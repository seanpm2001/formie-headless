{
    "require": {
        "craftcms/cms": "^3.6.4",
        "ether/tags": "^1.0",
        "verbb/formie": "dev-craft-3",
        "vlucas/phpdotenv": "^3.4.0"
    },
    "require-dev": {
        "yiisoft/yii2-shell": "^2.0.3"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "7.2.5"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
